<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <%= render @entry %>

    <div class="columns is-mobile">
      <div class="column">
        <div style="float: left; width: auto;">
          <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
        </div>
        <%= button_to 'Delete', @entry, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "button is-gray" %>
      </div>
      <div class="column">
        <!-- -->
      </div>
    </div>
  </div>
</div>
